@model StoreFrontSchema.DATA.EF.Models.Category

@{
    ViewData["Title"] = "Delete " + Model.CategoryName;
}

<h1><em>@ViewData["Title"]</em></h1>

<h3>Are you sure you want to delete @Model.CategoryName?</h3>
<div>
    <h4>Category Details</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CategoryName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CategoryName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CategoryDescription)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CategoryDescription)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="CategoryId" />
        <input type="submit" value="Purge Category" class="btn btn-danger btn-lg" /> 
        <a asp-action="Index" class="btn btn-secondary btn-lg">Back to List</a>
    </form>
</div>
