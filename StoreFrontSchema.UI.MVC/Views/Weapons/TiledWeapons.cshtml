@model IEnumerable<StoreFrontSchema.DATA.EF.Models.Weapon>

@{
    ViewData["Title"] = "Tiled Weapons";
}

@*<h1>TiledWeapons</h1>*@

<section class="product_section layout_padding">
    <div class="container">
        <div class="heading_container heading_center">
            <h2>
                Our <span>weapons</span>
            </h2>
        </div>

        <p align="center">
            @if (User.IsInRole("Admin"))
            {
                <a asp-action="Create">Add New Weapon</a> <span>|</span>
            }
            <a asp-action="Index">Table View</a>
        </p>
        <div class="row">

            @foreach (var item in Model)
            {
                <div class="col-sm-6 col-md-4 col-lg-4">
                    <div class="box">
                        <div class="option_container">
                            <div class="options">
                                <a asp-action="Details" asp-controller="Weapons" asp-route-id="@item.ProductId" class="option1">
                                    @item.ProductName
                                </a>
                                <a href="" class="option2">
                                    Buy Now
                                </a>
                            </div>
                        </div>
                        <div class="img-box">
                            <img src="~/images/@item.ProductImage" alt="@item.ProductName">
                        </div>
                        <div class="detail-box">
                            <h5>
                                @item.ProductName
                            </h5>
                            <h6>
                                @Html.DisplayFor(modelItem => item.ProductPrice)
                            </h6>
                        </div>
                    </div>
                </div>

            }

        </div>
        </div>
        </section>
